<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <ImageView
        android:id="@+id/iconLogoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_small"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin15"
        />

    <LinearLayout
        android:id="@+id/ll_group_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:text="EXAM HISTORY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font14"
            android:drawableLeft="@drawable/ic_assessmenthistory"
            android:background="@drawable/border_layout_bottom_his"
            android:padding="@dimen/margin5"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/lbExamhistory" />
        <TextView
            android:text="CALENDAR OF EXAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font14"
            android:drawableLeft="@drawable/ic_calendar_home"
            android:background="@drawable/border_layout_bottom_cal"
            android:padding="@dimen/margin5"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/lbCalender" />
        <TextView
            android:text="START EXAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font14"
            android:drawableLeft="@drawable/ic_startassessment"
            android:background="@drawable/border_rect_layout_bottom"
            android:padding="@dimen/margin5"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin5"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lbStartExam"
            android:layout_marginBottom="@dimen/margin10"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconLogoTop"
        android:layout_above="@+id/ll_group_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_rect_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"/>
        <LinearLayout
            android:id="@+id/ll_group_center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="Ponciano Fallarme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font14"
                    android:padding="@dimen/margin5"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lbName" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin25"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin20"
                    android:focusable="false"
                    android:numStars="5"
                    android:progressDrawable="@drawable/custom_ratingbar_selector"
                    android:rating="4.0"
                    android:stepSize="0.5" />

                <TextView
                    android:text="Examinee ID:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font14"
                    android:padding="@dimen/margin5"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lbId" />
                <TextView
                    android:text="Singapore University Accountancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font14"
                    android:padding="@dimen/margin5"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lbSchool" />
                <TextView
                    android:text="Sex: Male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font14"
                    android:padding="@dimen/margin5"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lbSex" />
                <TextView
                    android:text="Age: 35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font14"
                    android:padding="@dimen/margin5"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lbAge" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iconAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_ip5"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>