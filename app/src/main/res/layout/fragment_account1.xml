<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/ll_group_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivBack"
                android:src="@drawable/btn_back"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivNext"
                android:src="@drawable/btn_next"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_group_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boder_bg_content">
    <TextView
        android:text="ACCOUNTING"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font14"
        android:drawableLeft="@drawable/ic_newuser"
        android:padding="@dimen/margin10"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/lbLicense" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@drawable/border_rect_layout_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_rect_layout_white">

                    <LinearLayout
                        android:id="@+id/ll_tabbar_top"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_rect_greentop">
                        <TextView
                            android:text="TODAY"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabToday"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font14"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                        <TextView
                            android:text="April 21, 2017 9:30 PM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabHistory"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font14"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_dropdown"
                            android:layout_margin="@dimen/margin5"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_tabbar_top">
                        <TextView
                            android:text="$48"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font36"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/avatar"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_tab_week"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_rect_layout_white">

                    <LinearLayout
                        android:id="@+id/ll_tabbar_Week"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_rect_greentop">
                        <TextView
                            android:text="WEEK"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabWeek"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font14"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                        <TextView
                            android:text="April 21, 2017"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabDateWeek"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font14"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_dropdown"
                            android:layout_margin="@dimen/margin5"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_tabbar_Week">
                        <TextView
                            android:text="$482"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font36"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/avatar"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_rect_layout_white">

                    <LinearLayout
                        android:id="@+id/ll_tabbar_Month"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_rect_greentop">

                        <TextView
                            android:text="MONTH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabMonth"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font14"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                        <TextView
                            android:text="April 2017"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabDateMonth"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font14"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_dropdown"
                            android:layout_margin="@dimen/margin5"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_tabbar_Month">
                        <TextView
                            android:text="$814"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font36"
                            android:padding="@dimen/margin5"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/avatar"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/margin5"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>